########################################
# loopback device

auto lo
iface lo inet loopback

########################################
# Create wired network

allow-hotplug eth0
iface eth0 inet dhcp
    
########################################
# Create Ad-Hoc wifi network

allow-hotplug wlan0
iface wlan0 inet static
    address 192.168.1.1
    netmask 255.255.255.0

